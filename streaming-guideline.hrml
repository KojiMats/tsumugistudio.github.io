  <script>
    // --- Utilities ---
    const $ = (s,root=document)=>root.querySelector(s);
    const $$ = (s,root=document)=>Array.from(root.querySelectorAll(s));

    // --- Language tabs (ARIA) ---
    const langTablist = $('.tabs[role="tablist"]');
    const langTabs = $$('[role="tab"]', langTablist);
    const langPanels = $$('.tab-content');

    function activateLang(btn){
      langTabs.forEach(t=>{t.classList.remove('active'); t.setAttribute('aria-selected','false')});
      langPanels.forEach(p=>p.classList.remove('active'));
      btn.classList.add('active'); btn.setAttribute('aria-selected','true');
      $('#'+btn.getAttribute('aria-controls')).classList.add('active');
      // sync hash & remember
      let lang = 'ja';
      if(btn.id==='tab-en') lang='en';
      else if(btn.id==='tab-zh') lang='zh';
      else if(btn.id==='tab-ko') lang='ko';
      setHash({lang});
      localStorage.setItem('tsu_lang_guideline', lang);
    }

    langTabs.forEach(btn=>{
      btn.addEventListener('click', ()=>activateLang(btn));
      btn.addEventListener('keydown', e=>{
        if(e.key==='ArrowRight' || e.key==='ArrowLeft'){
          e.preventDefault();
          const i = langTabs.indexOf(document.activeElement);
          const ni = e.key==='ArrowRight' ? (i+1)%langTabs.length : (i-1+langTabs.length)%langTabs.length;
          langTabs[ni].focus();
        }
      });
    });

    // --- Hash deep links: #lang=ja ---
    function parseHash(){
      const h = location.hash.replace('#','');
      const params = new URLSearchParams(h);
      const lang = params.get('lang');
      return {lang};
    }
    function setHash({lang}){
      const params = new URLSearchParams();
      if(lang) params.set('lang', lang);
      history.replaceState(null, '', '#'+params.toString());
    }

    // Initial state: from hash -> localStorage -> default
    (function init(){
      const {lang} = parseHash();
      const storedLang = localStorage.getItem('tsu_lang_guideline');
      let initLang = lang || storedLang || 'ja';
      if(!lang && !storedLang && navigator.language){
        const nl = navigator.language.toLowerCase();
        if(nl.startsWith('en')) initLang = 'en';
        else if(nl.startsWith('zh') || nl.includes('hant')) initLang = 'zh';
        else if(nl.startsWith('ko')) initLang = 'ko';
      }
      const target = initLang==='en' ? $('#tab-en') : initLang==='zh' ? $('#tab-zh') : initLang==='ko' ? $('#tab-ko') : $('#tab-ja');
      if(target) activateLang(target);
    })();
  </script>
